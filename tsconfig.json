  "compilerOptions": {
    "allowJs": false,
    "typeRoots": ["./node_modules/@types", "./typings"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "NodeNext",
