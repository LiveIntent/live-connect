{
  "compilerOptions": {
    "allowJs": false,
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["mocha"],
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "es5"
  },
  "include": ["./src/**/*", "./test/**/*"]
}
