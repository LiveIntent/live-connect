{
  "presets": [
    [
      // Configure to only transform syntax
      "@babel/preset-env",
      {
        "useBuiltIns": false // handled by polyfill-corejs3
      }
    ]
  ],
  "plugins": [
    [
      // replace babel helpers with imports
      "@babel/plugin-transform-runtime",
      {
        "corejs": 3,
        "helpers": true,
        "regenerator": true
      }
    ],
    [
      // install pure polyfills
      "polyfill-corejs3",
      {
        "method": "usage-pure",
        "version": "3.3"
      }
    ]
  ],
  "targets": "safari 10, chrome 45, firefox 52, not dead, > 0.2%"
}
