{
  "presets": [
    [
      // Configure to only transform syntax
      "@babel/preset-env",
      {
        "useBuiltIns": false // handled by polyfill-corejs3
      }
    ]
  ],
  "plugins": [
    [
      // replace babel helpers with imports
      "@babel/plugin-transform-runtime",
      {
        "corejs": 3,
        "helpers": true,
        "regenerator": true
      }
    ],
    [
      // install pure polyfills
      "polyfill-corejs3",
      {
        "method": "usage-pure",
        "version": "3.3",
        "include": [
          "es.date.now" // unsupported on allianztravelinsurance.com
        ]
      }
    ]
  ],
  "targets": "> 0.25%, not IE 11, not op_mini all" // keep in sync with https://github.com/prebid/Prebid.js/blob/master/package.json#L20
}
